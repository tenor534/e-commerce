{% extends "base.html.twig" %}

{% block title %}Administration - Products List{% endblock %}
{% block body %}

<div class="archive-title clearfix">
    <div class="row align-items-end">

        <div class="col-md-8">
            <h2 class="page-title mb-2 mb-md-0">Administration - Products List</h2>
        </div>
    </div>

</div>

<div class="bd-callout bd-callout-info">    
    
</div>

 <div>
    <!-- Content here-->
    <section>
        <div class="bd-exemple-snippet bd-code-snippet">
            <div class="bd-example m-0 p-0 border-0">           

                <div class="container">
                    <div class="row">
                        {% include "_partials/_adminnav.html.twig" %}
                        <main class="col-9 border-light bg-white p-0 m-0">                            
                            
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">photo</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                    <tr>
                                        <th scope="row">{{ product.id }}</th>                                        
                                        <td>{{ product.categories.name }}</td>
                                        <td class="text-center">                                          
                                          <img 
                                                src="{{ asset('assets/uploads/products/images/mini/300x300-' ~ product.images[0].name) }}" 
                                                alt="{{ product.images[0].name }}"
                                                width="30"
                                                height="30"
                                          >

                                        </td>                                        
                                        <td>{{ product.name }}</td>
                                        <td class="text-center">{{ (product.price / 100) |format_currency('EUR', locale='de') }}</td>
                                        <td class="text-center">{{ product.stock }}</td>
                                        <td class="text-center"><a href="{{ path('admin_products_edit', {id: product.id}) }}" class="btn btn-success">Update</a></td>

                                    </tr>                                        
                                    {% endfor %}
                            
                                </tbody>
                            </table>

                        </main>

                    </div>
                </div>

            </div>
        </div>
    </section>
</div>   

    
{% endblock %}