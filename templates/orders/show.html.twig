                            <main class="col-9 border-light bg-white p-0 m-0">   
                            
                                <div class="">
                                    <div class="card border-0 p-0 bg-body-tertiary">                                        
                                        <div class="card-body p-2">
                                         {# Liste des commandes #}       
                                         {% include "orders/_list.html.twig" %}                                               
                                        
                                        </div>
                                    </div>
                                </div>
                            </main>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </section>
</div>   
    
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/images.js') }}" defer></script>
{% endblock %}
