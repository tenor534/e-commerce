<!--Pagination-->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        {% if currentPage > 1 %}                   
            <li class="page-item">
                <a href="{{ path(path, {slug: slug, page: currentPage - 1}) }}" class="page-link">Previous</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>        
        {% endif %}

        {% for page in 1..pages %}        
            {% if (currentPage == page) %}
                <li class="page-item active" aria-current="page">
            {% else %}
                <li class="page-item">
            {% endif %}            
                <a class="page-link" href="{{ path(path, {slug: slug, page: page}) }}">{{ page }}</a>
            </li>
        {% endfor %}    

        {% if currentPage < pages %}              
            <li class="page-item">
                <a href="{{ path(path, {slug: slug, page: currentPage + 1}) }}" class="page-link">Next</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>        
        {% endif %}

    </ul>
</nav>